<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="background">@color/background</item>
        <item name="colorPrimaryDark">@color/plaintText</item>
        <item name="colorAccent">@color/contact</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="background">@color/background</item>
        <item name="colorAccent">@color/pink</item>
        <item name="android:textColor">@color/plaintText</item>
    </style>

    <style name="LightButtons" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#1CB3BC</item>
    </style>

    <style name="SwipeLayout">
        <item name="android:paddingBottom">1px</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="RoundedButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/round</item>
        <item name="android:theme">@style/LightButtons</item>
        <item name="android:textColor">@color/plaintText</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="QuestionButtons" parent="RoundedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:text">@string/yes</item>
    </style>

</resources>