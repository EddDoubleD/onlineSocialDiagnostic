<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/userCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/background">

        <LinearLayout
            android:id="@+id/resultLine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/purple_shape"
            android:orientation="horizontal"
            android:weightSum="3"
            tools:ignore="ObsoleteLayoutParam">

            <TextView
                android:id="@+id/aliasCardText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_weight="2"
                android:fontFamily="@font/museo_sans_cyrl"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Диагностика"
                android:textColor="@color/plaintText"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/inviteDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/museo_sans_cyrl"
                android:gravity="center"
                android:inputType="datetime"
                android:text="02.05.2020"
                android:textColor="@color/plaintText"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
