<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.hardwork.onlinesocialdiagnosticapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.OnlineSocialDiagnosticApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_main_logo_07"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_main_logo_07"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.AboutActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.DoneActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.DiagnosticActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.StartActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.HomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.SettingsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.SignInActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>